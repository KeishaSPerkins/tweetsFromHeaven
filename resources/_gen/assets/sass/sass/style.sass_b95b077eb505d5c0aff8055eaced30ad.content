body{background-color:#f4f4f4}.content-column{padding-bottom:5rem}h1,h2,h3,h4,h5,h6{color:#444}#sidebar .sidebar-heading{display:flex;align-items:center}#sidebar .sidebar-heading img{width:4rem;height:4rem;border-radius:50%;margin:5px!important}#sidebar .sign-up{background:#753d97;color:#fff;display:flex;flex-flow:column wrap;height:0;padding:0;opacity:0;overflow:hidden;transition:opacity .3s ease}#sidebar .sign-up.open{height:auto;opacity:1}#sidebar .sign-up .description,#sidebar .sign-up form{padding:10px;margin:0}#sidebar .sign-up .description{font-size:1.2rem}#sidebar .sign-up form label{color:#fff;font-size:1rem;margin:0}#sidebar .sign-up form input{margin:10px;border:0;background:#fff;margin:5px;margin-left:0;background:#fff;color:#333}#sidebar .sign-up form input[type=text]{width:90%}#sidebar .sign-up form input[type=submit]{background:gold;font-size:1.2rem}.main-footer{background-color:#f4f4f4;font-size:.8rem;font-weight:400;text-align:center;position:fixed;color:#999;bottom:0;right:0;left:0;padding:1rem}.main-footer .copyright .credit{margin:0;margin-bottom:0;padding:0}.about .content-column-content{margin:auto;width:90%;margin:auto;max-width:800px}.about .about-image{width:50%;max-width:200px;border-radius:50%;margin:1rem;border:5px solid #36bba2;shape-outside:circle(50%)}.about .about-image:nth-of-type(odd){float:left;border:5px solid #753d97}.about .about-image:nth-of-type(even){float:right;border:5px solid #36bba2}.single .content-column-content{margin:auto;width:90%;margin:auto;max-width:800px}